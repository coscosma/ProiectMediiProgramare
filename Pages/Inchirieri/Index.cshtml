@page
@model ProiectMediiProgramare.Pages.Inchirieri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inchiriere[0].Client)
            </th>
            <th>
                Producator
            </th>
            <th>
                Model
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inchiriere[0].DataProgramarii)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inchiriere)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Masina.Producator.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Masina.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProgramarii)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
