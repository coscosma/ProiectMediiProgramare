@page
@model ProiectMediiProgramare.Pages.Locatii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Locatii</h1>

<p>
    <a asp-page="Create">Adauga o noua Locatie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Oras)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Locatie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Oras)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
